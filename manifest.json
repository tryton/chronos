{
    "manifest_version": 2,
    "name": "Chronos",
    "version": "0.6.1",
    "description": "Manage timesheets in Tryton",
    "icons": {
        "48": "icons/chronos-48.png"
    },
    "background": {
        "scripts": [
            "bower_components/jquery/dist/jquery.min.js",
            "backend.js",
            "background.js"
        ]
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": {
            "16": "icons/chronos-16.png",
            "19": "icons/chronos-19.png",
            "32": "icons/chronos-32.png",
            "38": "icons/chronos-38.png",
            "48": "icons/chronos-48.png",
            "64": "icons/chronos-64.png"
        },
        "default_popup": "chronos.html",
        "default_title": "Enter timesheet"
    },
    "permissions": [
        "*://*/",
        "alarms"
    ]
}
