{
    "manifest_version": 2,
    "name": "Chronos",
    "version": "0.7.2",
    "description": "Manage timesheets in Tryton",
    "icons": {
        "48": "icons/chronos.svg",
        "96": "icons/chronos.svg"
    },
    "background": {
        "scripts": [
            "bower_components/jquery/dist/jquery.min.js",
            "backend.js",
            "background.js"
        ]
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": "icons/chronos.svg",
        "default_popup": "chronos.html",
        "default_title": "Enter timesheet",
        "theme_icons": [{
            "light": "icons/chronos-light.svg",
            "dark": "icons/chronos.svg",
            "size": 16
        }, {
            "light": "icons/chronos-light.svg",
            "dark": "icons/chronos.svg",
            "size": 32
        }]
    },
    "permissions": [
        "*://*/",
        "alarms"
    ]
}
